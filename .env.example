# Zmanim Lab Environment Variables
# Copy this file to api/.env and web/.env.local

# =============================================================================
# Database (Supabase)
# =============================================================================
# Get from: Supabase Dashboard > Project Settings > Database > Connection string
DATABASE_URL=postgresql://postgres:[PASSWORD]@[PROJECT-REF].supabase.co:5432/postgres

# =============================================================================
# Caching (Upstash Redis)
# =============================================================================
# Get from: Upstash Console > Redis Database > REST API
UPSTASH_REDIS_REST_URL=https://[DATABASE-ID].upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# =============================================================================
# Authentication (Clerk)
# =============================================================================
# Get from: Clerk Dashboard > API Keys

# Backend secret key (used by API server)
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Frontend publishable key (safe to expose in browser)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# API Configuration
# =============================================================================
# API server port
API_PORT=8080

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3001,https://zmanim-lab.vercel.app

# =============================================================================
# Frontend Configuration
# =============================================================================
# Web app port
WEB_PORT=3001

# API URL for frontend to call
NEXT_PUBLIC_API_URL=http://localhost:8080

# =============================================================================
# Email (Resend)
# =============================================================================
# Get from: Resend Dashboard > API Keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
RESEND_DOMAIN=yourdomain.com
RESEND_FROM=noreply@yourdomain.com

# =============================================================================
# Development Settings
# =============================================================================
# Enable debug logging
DEBUG=false

# Environment (development, staging, production)
NODE_ENV=development
GO_ENV=development
