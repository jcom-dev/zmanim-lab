# Server Configuration
PORT=8080
ENVIRONMENT=development

# Database Configuration (Xata PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379

# Authentication (Clerk)
CLERK_SECRET_KEY=your-clerk-secret-key
CLERK_JWKS_URL=https://your-domain.clerk.accounts.dev/.well-known/jwks.json
CLERK_ISSUER=https://your-domain.clerk.accounts.dev

# CORS Configuration
# Default allowed origins (used if ALLOWED_ORIGINS is not set):
# http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001,
# https://localhost:3000,https://localhost:3001,https://127.0.0.1:3000,https://127.0.0.1:3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_DURATION=1m

# AI Services (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

# Email (Resend)
RESEND_API_KEY=your-resend-api-key
RESEND_DOMAIN=your-domain.com
RESEND_FROM=noreply@your-domain.com
